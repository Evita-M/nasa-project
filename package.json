{
  "name": "nasa-mission-frontier",
  "private": true,
  "version": "1.0.0",
  "description": "Nasa Mission Frontier Project",
  "scripts": {
    "dev:client": "pnpm --filter nasa-project-client dev",
    "dev:server": "pnpm --filter nasa-project-api dev",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build:client": "pnpm --filter nasa-project-client build",
    "build:server": "pnpm --filter nasa-project-api build",
    "build": "pnpm build:server && pnpm build:client",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "shx": "^0.3.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "express": "^5.1.0"
  }
}
